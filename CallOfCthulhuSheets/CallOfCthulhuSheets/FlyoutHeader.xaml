<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:cocs="clr-namespace:CallOfCthulhuSheets" 
             x:DataType="cocs:FlyoutHeader"
             xmlns:fa="clr-namespace:FontAwesome"
             x:Class="CallOfCthulhuSheets.FlyoutHeader"
             HeightRequest="150"
             BackgroundColor="{StaticResource PrimBackground}">
    
    <ContentView.Content>
        <StackLayout>
            <Label Text="{x:Static fa:FontAwesomeIcons.Pastafarianism}" TextColor="#70b2a6"
                   Padding="0,20,0,0"
                   FontSize="Header" FontFamily="FAS" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding CurrentPlayer}" Margin="7"
                   FontSize="Medium" HorizontalTextAlignment="Start" VerticalTextAlignment="End"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>