<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:cocs="clr-namespace:CallOfCthulhuSheets"
             xmlns:fontAwesome="using:FontAwesome"
             x:DataType="cocs:FlyoutHeader"
             x:Class="CallOfCthulhuSheets.FlyoutHeader"
             HeightRequest="150"
             BackgroundColor="{StaticResource PrimBackground}">
    
    <ContentView.Content>
        <StackLayout>
            <Label Text="{x:Static fontAwesome:FontAwesomeIcons.Pastafarianism}" TextColor="#70b2a6"
                   Padding="0,20,0,0"
                   FontSize="Header" FontFamily="FAS" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding CurrentPlayer}" Margin="7"
                   FontSize="Medium" HorizontalTextAlignment="Start" VerticalTextAlignment="End"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>